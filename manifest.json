{
  "manifest_version": 3,
  "name": "Bookmark Extender",
  "version": "1.0",
  "description": "扩展书签的功能，增加额外字段用于查询和整理。",
  "permissions": [
    "bookmarks",
    "storage",
    "webRequest",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}